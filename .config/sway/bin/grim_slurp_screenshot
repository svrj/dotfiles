#!/usr/bin/env bash

# https://github.com/emersion/slurp
# https://git.sr.ht/~emersion/grim
DT="$(date | sed -e 's/ /\_/g')"
FNAME="/home/$USER/Pictures/screenshot_$DT.png"
if [ -z "$1" ]; then
    grim -g "$(slurp)" -o "$FNAME" && echo "Screenshot saved to $FNAME"
else
    if [ "$1" == "--clip" ]; then
        grim -g "$(slurp)" -o "$FNAME" - | wl-copy && echo "Screenshot copied to clipboard!"
    else
        echo "Invalid argument: $1"
        exit 1
    fi
fi
